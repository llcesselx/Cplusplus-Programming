#include <iostream>
using namespace std;

int main() {
	
	// Declaring variables.
	char letter;
	int number;
	float decimal;
	double pi;
	bool isTrue = false;

	// Declaring arrays.
	int nums[6];

	// Initializing variables.
	letter = 'A';
	number = 100;
	decimal = 7.5;
	pi = 3.14159;
	isTrue = false;

	// Initializing arrays.
	nums[0] = 1.5, nums[1] = 2.75, nums[2] = 3.25;

	// Declaring and initializing variables.
	string myName = "Lea";
	int myAge = 29;

	// Declaring and initializing arrays.
	char name[4] = { 'L', 'E', 'A', '\0' };
	char catName[6] = { 'P', 'A', 'Z', 'Z', 'Y', '\0' };
	int coords[2][3] = { {1,2,3}, {4,5,6} };

	// Output variables.
	cout << "char letter: " << letter << endl;
	cout << "number: " << number << endl;
	cout << "decimal: " << decimal << endl;
	cout << "pi: " << pi << endl;
	cout << "bool isTrue?: " << isTrue << endl;

	// Output arrays.
	cout << "My Name: " << name << endl << "My cat's name: " << catName << endl;
	cout << "Plot Point 1: " << coords[0][2] << " , " << coords[1][0] << endl;
	cout << "Plot Point 2: " << coords[0][1] << " , " << coords[1][2] << endl;

	return 0;
}
